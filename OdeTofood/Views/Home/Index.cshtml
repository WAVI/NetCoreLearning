@model OdeTofood.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home page";

    //we can overwrite the layout from viewstart in other cshtml page

    //Layout = "~/Views/Shared/_Layout2.cshtml";
    //Layout = null
}

<h1>All restaurants</h1>
<table>
    @foreach ( var restaurant in Model.Restaurants )
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Id</td>
            <td>

                @*<a href="/home/details/@restaurant.Id">Details</a>*@

                @*@Html.ActionLink("Go", "Details", new { id=restaurant.Id } ) ---- old asp.net*@

                @*for this, we need Views/_ViewImports.cshtml si prima linie*@
                <a asp-action="Details" asp-route-id="@restaurant.Id">More</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Add Restaurant</a>

@section footer {
    @Model.CurrentMessage
}